<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetdot">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetDot">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.AddTransactionActivity" />
        <activity
            android:name=".activity.TransactionDetailActivity"
            android:theme="@style/Theme.BudgetDot.AppBarOverlay" /> <!-- Added theme -->
        <activity android:name=".activity.BudgetDetailActivity" />
        <activity android:name=".activity.AddBudgetActivity" />
        <activity android:name=".activity.ReportsActivity" />
        <activity android:name=".activity.SettingsActivity" />
    </application>

</manifest>